{
  "name": "portal",
  "version": "1.0.0",
  "config": {
    "server": "django"
  },
  "description": "https://github.com/surfedushare/search-portal",
  "repository": "A frontend for searching open access higher education learning materials",
  "license": "MIT",
  "scripts": {
    "serve": "npm_config_server=vue vue-cli-service serve",
    "build": "vue-cli-service build --dest ../service/surf/apps/materials/static/portal/",
    "lint": "eslint --ext .vue,.js src",
    "watch": "vue-cli-service build --watch --dest ../service/surf/apps/materials/static/portal/"
  },
  "dependencies": {
    "@diracleo/vue-enlargeable-image": "0.0.7",
    "@fortawesome/fontawesome-free": "5.14.0",
    "@sentry/browser": "5.26.0",
    "@sentry/integrations": "5.20.1",
    "axios": "0.21.2",
    "cookie": "0.4.1",
    "core-js": "3.6.5",
    "js-cookie": "2.2.1",
    "lodash": "^4.17.21",
    "luxon": "^2.0.2",
    "numeral": "2.0.6",
    "tiptap": "1.32.2",
    "tiptap-extensions": "1.33.2",
    "uuid-validate": "0.0.3",
    "vue": "^2.6.11",
    "vue-autosuggest": "^2.2.0",
    "vue-click-outside": "1.1.0",
    "vue-clipboard2": "0.3.1",
    "vue-croppie": "2.0.2",
    "vue-i18n": "8.20.0",
    "vue-infinite-scroll": "2.0.2",
    "vue-inject": "2.1.1",
    "vue-masonry-css": "1.0.3",
    "vue-meta": "^2.4.0",
    "vue-router": "3.4.7",
    "vue-social-sharing": "2.4.7",
    "vuedraggable": "^2.24.3",
    "vuejs-datepicker": "1.6.2",
    "vuetify": "^2.6.3",
    "vuex": "3.5.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.4.6",
    "@vue/cli-plugin-eslint": "^4.4.6",
    "@vue/cli-service": "^4.5.15",
    "babel-eslint": "^10.1.0",
    "browserslist": "4.16.5",
    "deepmerge": "^4.2.2",
    "eslint": "^7.6.0",
    "eslint-plugin-vue": "^6.2.2",
    "glob-parent": ">=5.1.2",
    "highlight.js": ">=10.4.1",
    "is-svg": ">=4.2.2",
    "json-schema": ">=0.4.0",
    "less": "^3.12.2",
    "less-loader": "^6.2.0",
    "node-forge": ">=1.0.0",
    "npm-check": "5.9.2",
    "nth-check": ">=2.0.1",
    "sass": "^1.32.13",
    "sass-loader": "^10.1.1",
    "trim-newlines": ">=3.0.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-bundle-tracker": "0.4.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        2,
        {
          "singleline": 20,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/singleline-html-element-content-newline": "off",
      "vue/multiline-html-element-content-newline": "off",
      "vue/html-self-closing": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
