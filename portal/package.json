{
  "name": "portal",
  "version": "1.0.0",
  "config": {
    "server": "django"
  },
  "description": "https://github.com/surfedushare/search-portal",
  "repository": "A frontend for searching open access higher education learning materials",
  "license": "MIT",
  "scripts": {
    "serve": "npm_config_server=vue vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "eslint --ext .vue,.js src",
    "watch": "vue-cli-service build --watch --dest ../service/surf/apps/materials/static/portal/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.14.0",
    "@sentry/browser": "5.20.1",
    "@sentry/integrations": "5.20.1",
    "axios": "0.19.2",
    "cookie": "0.4.1",
    "core-js": "3.6.5",
    "js-cookie": "2.2.1",
    "numeral": "2.0.6",
    "tiptap": "1.30.0",
    "tiptap-extensions": "1.33.2",
    "uuid-validate": "0.0.3",
    "vue": "^2.6.11",
    "vue-autosuggest": "^2.2.0",
    "vue-click-outside": "1.1.0",
    "vue-clipboard2": "0.3.1",
    "vue-croppie": "2.0.2",
    "vue-i18n": "8.20.0",
    "vue-infinite-scroll": "2.0.2",
    "vue-inject": "2.1.1",
    "vue-masonry-css": "1.0.3",
    "vue-router": "3.3.4",
    "vue-social-sharing": "2.4.7",
    "vuejs-datepicker": "1.6.2",
    "vuex": "3.5.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.4.6",
    "@vue/cli-plugin-eslint": "^4.4.6",
    "@vue/cli-service": "^4.4.6",
    "babel-eslint": "^10.1.0",
    "browserslist": "4.13.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "less": "^3.12.2",
    "less-loader": "^6.2.0",
    "npm-check": "5.9.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-bundle-tracker": "0.4.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "prettier/vue"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        2,
        {
          "singleline": 20,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
